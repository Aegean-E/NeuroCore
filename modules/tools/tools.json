                }
            }
        },
        "enabled": true
    },
    "FetchURL": {
        "definition": {
            "type": "function",
            "function": {
                "name": "FetchURL",
                "description": "Fetches the raw text content from a specific URL.",
                "parameters": {
                    "type": "object",
                    "properties": {
                        "url": {
                            "type": "string",
                            "description": "The URL to fetch content from."
                        }
                    },
                    "required": [
